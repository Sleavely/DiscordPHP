<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="repository.abstract" class="Discord\Repository\AbstractRepository" abstract="true">
            <argument type="service" id="guzzle"/>
            <argument type="service" id="cache_wrapper.default"/>
            <argument type="service" id="factory.part"/>
        </service>

        <service id="repository.user" class="Discord\Repository\UserRepository" parent="repository.abstract"/>
    </services>
</container>